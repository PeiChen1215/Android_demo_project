<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 运行前台服务需要声明该权限 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- Android 13+ 需要在清单中声明通知权限并在运行时请求 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.SupermarketManager">

        <!-- 启动页面 -->
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.SupermarketManager">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 登录页面 -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false" />

        <!-- 主页面 -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="false" />

        <activity
            android:name=".activities.ProductListActivity"
            android:exported="false" />

        <activity
            android:name=".activities.ProductDetailActivity"
            android:exported="false" />

        <activity
            android:name=".activities.ProductQueryActivity"
            android:exported="false" />

        <activity
            android:name=".activities.ProductAddActivity"
            android:exported="false" />

        <activity
            android:name=".activities.RestockActivity"
            android:exported="false" />

        <activity
            android:name=".activities.PurchaseActivity"
            android:exported="false" />

        <activity
            android:name=".activities.PurchaseCreateActivity"
            android:exported="false" />

        <activity
            android:name=".activities.PurchaseListActivity"
            android:exported="false" />

        <activity
            android:name=".activities.PurchaseDetailActivity"
            android:exported="false" />

        <activity
            android:name=".activities.StockAdjustActivity"
            android:exported="false" />

        <activity android:name=".activities.StockCountActivity"
            android:exported="false"/>

        <activity
            android:name=".activities.StockHistoryActivity"
            android:exported="false" />

        <activity
            android:name=".activities.SaleActivity"
            android:exported="false" />

        <activity
            android:name=".activities.RevenueReportActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ReceiptListActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ReceiptDetailActivity"
            android:exported="false" />

        <!-- FileProvider for sharing exported reports -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>

        <!-- 后台库存监控服务 -->
        <service
            android:name=".services.InventoryMonitorService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

    </application>

</manifest>